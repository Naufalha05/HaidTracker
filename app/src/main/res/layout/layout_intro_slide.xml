    <TextView android:id="@+id/intro_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:fontFamily="sans-serif" android:textAlignment="center" android:textColor="#880E4F" android:textSize="16sp"/>
