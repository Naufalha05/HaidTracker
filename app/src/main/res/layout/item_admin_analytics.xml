<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Analytics Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ff66b1"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 Rata-rata Siklus:"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvAverageCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28.0 hari"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ff66b1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔄 Siklus Terakhir:"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvLastCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 hari"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📈 Total Siklus:"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvTotalCycles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔮 Prediksi Berikutnya:"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvNextPredicted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Jan 2024"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⭐ Skor Keteraturan:"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvRegularityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85.0%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>