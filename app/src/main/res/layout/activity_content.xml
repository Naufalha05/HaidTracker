<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.content.ContentActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/paginationLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul dan Deskripsi -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contents"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF66B1"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengetahuan seputar fakta unik Haid"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="#282626"/>

            <!-- CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FDD8E9">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ©¸ HaidPedia"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#FF66B1"
                        android:gravity="center"
                        android:paddingBottom="12dp" />

                    <ImageView
                        android:id="@+id/imageFact"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/period_blood"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi Fakta"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/sourceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sumber fakta"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Pagination Layout -->
    <LinearLayout
        android:id="@+id/paginationLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFE6F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFirst"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Â«"
            android:textColor="#FF66B1"
            android:background="@drawable/pagination_roundbutton_outline"
            android:textSize="14sp"/>

        <!-- Previous Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â€¹"
            android:textColor="#FF66B1"
            android:background="@drawable/pagination_roundbutton_outline"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

        <!-- Page 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="1"
            android:textColor="#FFFFFF"
            android:background="@drawable/pagination_roundbutton"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

        <!-- Page 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pagination_roundbutton_outline"
            android:text="2"
            android:textColor="#FF66B1"
            android:layout_marginStart="8dp"
            android:textSize="14sp" />

        <!-- Page 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="3"
            android:textColor="#FF66B1"
            android:background="@drawable/pagination_roundbutton_outline"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

        <!-- Next Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â€º"
            android:textColor="#FF66B1"
            android:background="@drawable/pagination_roundbutton_outline"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

        <!-- Last Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLast"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Â»"
            android:textColor="#FF66B1"
            android:background="@drawable/pagination_roundbutton_outline"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
